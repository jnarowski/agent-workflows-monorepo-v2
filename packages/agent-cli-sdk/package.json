{
  "name": "@repo/agent-cli-sdk",
  "version": "3.0.0",
  "description": "TypeScript SDK for orchestrating AI-powered CLI tools (Claude Code, OpenAI Codex) in development workflows",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "check": "vitest run && pnpm check-types && pnpm lint",
    "check-types": "tsc --noEmit",
    "dev": "tsx watch src/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src --ext .ts",
    "ship": "git add . && git commit -m 'chore: prepare release' || true && pnpm version patch && git push && git push --tags && pnpm publish",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:console": "tsx examples/console-test.ts",
    "test:e2e": "RUN_E2E_TESTS=true vitest run --config vitest.e2e.config.ts",
    "test:e2e:claude": "RUN_E2E_TESTS=true vitest run --config vitest.e2e.config.ts tests/e2e/claude-e2e.test.ts",
    "test:e2e:codex": "RUN_E2E_TESTS=true vitest run --config vitest.e2e.config.ts tests/e2e/codex-e2e.test.ts"
  },
  "keywords": [
    "ai",
    "claude",
    "codex",
    "openai",
    "cli",
    "automation",
    "development",
    "sdk",
    "typescript",
    "adapter",
    "workflow",
    "orchestration"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sourceborn/agent-cli-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/sourceborn/agent-cli-sdk/issues"
  },
  "homepage": "https://github.com/sourceborn/agent-cli-sdk#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "author": "Sourceborn",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.3.0",
    "cross-spawn": "^7.0.6"
  },
  "peerDependencies": {
    "zod": "^4.0.0 || ^3.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.6",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "canvas": "^3.2.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.0",
    "tsdown": "^0.15.7",
    "tsx": "^4.7.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0",
    "zod": "^4.0.0"
  }
}
